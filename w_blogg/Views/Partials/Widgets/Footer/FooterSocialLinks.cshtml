@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.FooterSocialLinks>
@using ContentModels = Umbraco.Web.PublishedModels;

<div class="footer-item footer-item--social-links text-@(Model.AlignContent)">

    @if (Model.Heading != "")
    {
        <h2 class="h6">@Model.Heading</h2>
    }
    
    <ul class="social-nav" itemscope itemtype="http://schema.org/Organization">
        <link itemprop="url" href="@Umbraco.AssignedContentItem.Url(mode: UrlMode.Absolute)">
        
        @if (Model.Facebook != "")
        {
            <li><a itemprop="sameAs" href="@(Model.Facebook)" target="_blank" title="Facebook" rel="noopener"><i class="fa fa-facebook"></i></a></li>
        }
        @if (Model.Twitter != "")
        {
            <li><a itemprop="sameAs" href="@(Model.Twitter)" target="_blank" title="Twitter" rel="noopener"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
        }
        @if (Model.Instagram != "")
        {
            <li><a itemprop="sameAs" href="@(Model.Instagram)" target="_blank" title="Instagram" rel="noopener"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
        }
        @if (Model.LinkedIn != "")
        {
            <li><a itemprop="sameAs" href="@(Model.LinkedIn)" target="_blank" title="Linked In" rel="noopener"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
        }
        @if (Model.Google != "")
        {
            <li><a itemprop="sameAs" href="@(Model.Google)" target="_blank" title="Google+"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
        }
        @if (Model.YouTube != "")
        {
            <li><a itemprop="sameAs" href="@(Model.YouTube)" target="_blank" title="YouTube"><i class="fa fa-youtube" aria-hidden="true"></i></a></li>
        }
    </ul>
    
</div>